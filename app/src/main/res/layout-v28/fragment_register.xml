<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_back"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="48dp"
                android:lineHeight="38dp"
                android:text="@string/resgistry"
                android:textColor="#4356B4"
                android:textSize="32sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="61dp"
                android:lineHeight="17dp"
                android:text="@string/full_name_upper"
                android:textColor="#999999"
                android:textFontWeight="500"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="7dp"
                android:drawableEnd="@drawable/ic_user"
                android:lineHeight="21dp"
                android:textColor="@color/black"
                android:textColorHint="#676767"
                android:textFontWeight="500"
                android:textSize="18sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="40dp"
                android:lineHeight="17dp"
                android:text="@string/email_upper"
                android:textColor="#999999"
                android:textFontWeight="500"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="7dp"
                android:drawableEnd="@drawable/ic_mail"
                android:lineHeight="21dp"
                android:textColor="@color/black"
                android:textColorHint="#676767"
                android:textFontWeight="500"
                android:textSize="18sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="40dp"
                android:lineHeight="17dp"
                android:text="@string/password_upper"
                android:textColor="#999999"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="7dp"
                android:drawableEnd="@drawable/ic_password"
                android:inputType="textPassword"
                android:lineHeight="21dp"
                android:textColor="@color/black"
                android:textColorHint="#676767"
                android:textFontWeight="500"
                android:textSize="18sp"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:button="@drawable/ic_check"
                android:layout_gravity="center"
                android:text="@string/policies_and_terms"
                android:lineHeight="17dp"
                android:textColor="#999999"
                android:textFontWeight="700"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="47dp"
                android:background="@drawable/button_login"
                android:enabled="false"
                android:paddingVertical="16dp"
                android:text="@string/resgistry"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleNoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:lineHeight="17dp"
                android:layout_gravity="center"
                android:text="@string/had_a_account"
                android:textColor="#999999"
                android:textFontWeight="500"
                android:textSize="14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</layout>